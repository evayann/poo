{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/app",
        "module": "es2015",
        "baseUrl": ".",
        "paths": {
            "@core/*": ["app/core/*"],
            "@pages/*": ["app/pages/*"],
            "@shared/*": ["app/shared/*"],
            "@sketches": ["app/sketches/index.ts", "app/sketches/doodle/*"]
        },
        "types": []
    },
    "files": ["main.ts", "polyfills.ts"],
    "include": ["src/**/*.d.ts"],
    "exclude": ["test.ts", "**/*.spec.ts"]
}
